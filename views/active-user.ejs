<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #212529;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }
        .container {
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .user-card {
            background-color: #343a40;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .user-details {
            flex: 1;
            padding-right: 1rem;
        }
        .user-details h3 {
            margin-bottom: 0.5rem;
        }
        .user-details .email {
            font-size: 0.875rem;
            color: #adb5bd;
        }
        .user-details .location {
            margin-top: 0.5rem;
        }
        .visit-profile {
            flex-shrink: 0;
            margin-left: 1rem;
        }
        .visit-profile a {
            color: #6ea8fe;
            text-decoration: none;
        }
        .visit-profile a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Book Buddy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a href="/secrets" class="nav-link active" aria-current="page">Home</a></li>
                    <li class="nav-item"><a href="/about" class="nav-link">About</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if (Array.isArray(locals.users) && locals.users.length > 0) { %>
            <div class="row">
                <% users.forEach(function(user) { %>
                    <div class="col-md-6">
                        <div class="user-card">
                            <div class="user-details">
                                <h3 class="mb-0"><%= user.nickname %></h3>
                                <div class="email mb-1"><%= user.email %></div>
                                <p class="location"><%= user.district %></p>
                                <p class="location"><%= user.location %></p>
                            </div>
                            <div class="visit-profile">
                                <a href="/profile/<%= user.id %>">Visit Profile</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No Active user found.</p>
        <% } %>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+DY8nB6u5W8KdJ6fHe9KN4zrF4Q05" crossorigin="anonymous"></script>
</body>
</html>
