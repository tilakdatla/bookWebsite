    <!-- hero section -->
    
    <div class="px-4 pt-5 my-5 text-center border-bottom">
        <h1 class="display-4 fw-bold text-body-emphasis">BookBuddy</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">Welcome to our Book Exchange Platform, a haven for book lovers! Our platform is a one-stop solution for exchanging, lending, and borrowing books. Discover new reading material, share your favorite books, and connect with fellow book enthusiasts in your community.</p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
            <button type="button" class="btn btn-primary btn-lg px-4 me-sm-3">Get a Quote</button>
            <button type="button" class="btn btn-outline-secondary btn-lg px-4">
              <a href="/about" class="btn-link">About us</a>
          </button>
          </div>
        </div>
        <div class="overflow-hidden" style="max-height: 30vh;">
          <div class="container px-5">
            <img src="https://www.mercyhome.org/wp-content/uploads/2020/05/girl-reading-pile-of-books.jpg" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="700" height="600" loading="eager">
          </div>
        </div>
    </div>

    
    <!-- features -->
